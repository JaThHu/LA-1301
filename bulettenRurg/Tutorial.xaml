<Window x:Class="bulettenRurg.Tutorial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bulettenRurg"
        mc:Ignorable="d"
        Title="Tutorial" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/tutorialBackground.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Height="121" Margin="30,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="736" Foreground="Red" FontSize="22"><Run Language="de-ch" Text="Am Anfang des Spiels kannst du entscheiden wie viele Chips du willst, danach kannst du in Wettzahl auf eine Zahl zwischen 1 und 36 Wetten und in der Wette entscheiden wie viel du wetten willst, das Spiel ist vorbei wenn du keine Chips mehr hast"/></TextBlock>
        <Button x:Name="tutorialEnde" Content="Verstanden" HorizontalAlignment="Left" Height="57" Margin="630,367,0,0" VerticalAlignment="Top" Width="136" FontSize="20" Click="tutorialEnde_Click" Background="#FF313131" Foreground="#FFFFED00"/>

    </Grid>
</Window>
